; vim: set ft=dosini:
[alias]
  branches = branch -a
  br = branch
  brv = branch -v
  ci = commit
  co = checkout
  st = status
  h = help
  sm = submodule
  lgn = log --name-status
  lgp = log -p
  ahead = log @{u}..
  behind = log ..@{u}
  dff = diff
  dif = diff
  idff = diff
  cdiff = diff --cached
  cdif = diff --cached
  hist = log
  pul = pull
  pulll = pull
  puhs = push
  pus = push
  sw = switch

[core]
  pager = ''
;  gitproxy=default-proxy

[diff]
;  tool = meld
  submodule = log

[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f

[init]
  defaultBranch = master

[pull]
  rebase = false
  ff = true

[push]
  default = simple

[status]
  submodulesummary = 1

[tar "tar.xz"]
  command = xz -c

[url "https://bitbucket.com/"]
  insteadOf = bbh:

[url "git@bitbucket.org:"]
  insteadOf = bbg:

[url "https://github.com/"]
  insteadOf = gh:

[url "git@github.com"]
  insteadOf = gg:

[url "https://gist.github.com/"]
  insteadOf = gist:

